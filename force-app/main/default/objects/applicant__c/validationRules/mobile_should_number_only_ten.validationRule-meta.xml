<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>mobile_should_number_only_ten</fullName>
    <active>false</active>
    <description>mobile should only ten digit in number form</description>
    <errorConditionFormula>NOT((REGEX( mobile_no__c , &quot;^[0-9]{10}&quot;)))</errorConditionFormula>
    <errorMessage>invalid mobile number</errorMessage>
</ValidationRule>
